{
  "manifest_version": 3,
  "name": "Timestamp Tooltip",
  "short_name": "TimeTool",
  "description": "Adds a tooltip of a more human readable timestamp above a selected timestamp",
  "version": "0.0.1",
  "minimum_chrome_version": "38",
  "permissions": [
    "contextMenus", 
    "tabs",
    "scripting",
    "activeTab",
    "notifications",
    "storage"],
  "icons": {
    "16": "assets/search16.png",
    "48": "assets/search48.png",
    "128": "assets/search128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/search16.png",
      "48": "assets/search48.png",
      "128": "assets/search128.png"
    }
  },
  "background": {
    "service_worker": "main.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js"
      ]
    }
  ]
}
